# Backend Environment Variables
# Copy this file to .env and fill with your values

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# MercadoPago Chile (obtener en https://www.mercadopago.cl/developers)
MP_ACCESS_TOKEN=TEST-YOUR-ACCESS-TOKEN
MP_PUBLIC_KEY=TEST-YOUR-PUBLIC-KEY

# Optional: Database (cuando se implemente)
DATABASE_URL=postgresql://user:password@localhost:5432/criptodamus

# Optional: Redis (para cach√© avanzado)
REDIS_URL=redis://localhost:6379

# Optional: Email (para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60